<!doctype html>
<!--[if IE 9]> <html class="ie9 no-js" lang="{{ shop.locale }}"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html class="no-js" lang="{{ shop.locale }}"> <!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="{{ settings.color_accent }}">
    <link rel="canonical" href="{{ canonical_url }}">

    {% if settings.favicon != blank %}
        <link rel="shortcut icon" href="{{ settings.favicon | img_url: '32x32' }}" type="image/png">
    {% endif %}

    <title>{{ shop.name }}</title>

    {% include 'style-tags' %}
    {% include 'css-variables' %}
    <link href="https://fonts.googleapis.com/css?family=Coming+Soon|Nunito:400,400i,700,700i" rel="stylesheet">

    {% if page_description %}
        <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {% include 'social-meta-tags' %}

    {{ content_for_header }}
</head>

<body class="template-password">
<header role="banner">
    <h1 itemscope itemtype="http://schema.org/Organization">
        <div class="site-logo">
            <div class="jumbotron jumbotron-fluid">
                <div class="container">
                    {{ shop.name }}
                </div>
            </div>
        </div>
    </h1>
</header>

<main role="main" id="MainContent">
    {{ content_for_layout }}
</main>

<footer>
    <div class="container">
        {% capture shopify_link %}
            <a href="//www.shopify.com" target="_blank" title="Create your own online store with Shopify">
                {% include 'icon-shopify-logo' %}
                <span class="icon-fallback-text">Shopify</span>
            </a>
        {% endcapture %}
        {{ 'general.password_page.powered_by_shopify_html' | t: shopify: shopify_link }}
    </div>
</footer>

<div id="Login">
    <div class="container">
        <h4>{{ 'general.password_page.login_form_heading' | t }}</h4>
        {% form 'storefront_password' %}
            <div class="alert alert-danger">
                {{ form.errors | default_errors }}
            </div>

            <div class="input-group mb-3">
                <input type="password"
                       name="password"
                       id="Password"
                       class="form-control"
                       placeholder="{{ 'general.password_page.login_form_password_placeholder' | t }}">
                <div class="input-group-append">
                    <button type="submit" name="commit" class="btn btn-primary">
                        {{ 'general.password_page.login_form_submit' | t }}
                    </button>
                </div>
            </div>
        {% endform %}
        <p>{{ 'general.password_page.admin_link_html' | t }}</p>
    </div>
</div>
</body>
</html>
